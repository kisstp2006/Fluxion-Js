    -->
    
    <Sprite name="Floor1" imageSrc="../../examples/Jolly3Chapter2Elevator/assets/elevator/floor1.png" 
            x="480" y="2160" width="1242" height="810" />
            
    <Sprite name="Floor2" imageSrc="../../examples/Jolly3Chapter2Elevator/assets/elevator/floor2.png" 
            x="480" y="3780" width="1242" height="810" />
            
    <Sprite name="Floor3" imageSrc="../../examples/Jolly3Chapter2Elevator/assets/elevator/floor3.png" 
            x="480" y="5400" width="1242" height="810" />
            
    <Sprite name="PipesBg" imageSrc="../../examples/Jolly3Chapter2Elevator/assets/elevator/pipes1.png" 
